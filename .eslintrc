{
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "flowtype"
  ],
  "rules": {
    "indent": 2,
    "no-restricted-syntax": "off",

    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/no-unused-prop-types": "off",
    "react/sort-comp": [
      "error", {
        "order": [
          "type-annotations",
          "static-methods",
          "life-cycle",
          "everything-else",
          "render"
        ]
      }
    ],

    "jsx-a11y/no-static-element-interactions": "off"
  },
  "globals": {
    "describe": true,
    "it": false,
    "xit": false,
    "before": true,
    "beforeEach": true,
    "afterEach": true,
    "document": true
  }
}
